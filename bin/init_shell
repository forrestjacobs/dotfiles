#!/usr/bin/env bash

shell=$1

escape () {
  local text=$1
  text=${text//\\/\\\\}
  text=${text//\'/\\\'}
  echo "'$text'"
}

p_alias () {
  echo "alias $(escape "$1")=$(escape "$2")"
}

p_abbr () {
  if [[ "$shell" = "fish" ]]; then
    echo "abbr $(escape "$1") $(escape "$2")"
  else
    p_alias "$@"
  fi
}

p_export () {
  export "$1"="$2"
  echo "export $(escape "$1")=$(escape "$2")"
}

add_path () {
  p_export PATH "$1:$PATH"
}

for f in ~/.config/init_shell/conf.d/*.sh; do
  # shellcheck disable=SC1090
  . "$f"
done
