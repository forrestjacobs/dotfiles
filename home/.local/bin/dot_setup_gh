#!/usr/bin/env bash
set -euo pipefail

describe() {
  echo "GitHub CLI"
}

check() {
  [[ "$(git config --global credential.https://github.com.helper)" = *"gh auth git-credential"* ]]
}

fix() {
  if ! has gh; then
    dot_setup_brew
    brew install gh
  fi
  gh auth login
  gh auth setup-git
}

. "${HOME}/.local/lib/dot_setup.sh"
